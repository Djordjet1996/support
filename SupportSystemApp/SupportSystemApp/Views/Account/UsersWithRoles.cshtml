@model IEnumerable<SupportSystemApp.Models.Users_in_Role_ViewModel>

@{
    ViewBag.Title = "UsersWithRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users List</h2>

<p>
    @Html.ActionLink("Create New", "Register")
</p>
<table class="table">
    <tr>
        <th>
            Action
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UserPhone)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UserAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserCountry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activ)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.UserPhone)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.UserAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserCountry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activ)
        </td>

    </tr>
}

</table>
